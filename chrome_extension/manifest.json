{
  "name": "Noodle Extension",
  "version": "1.0",
  "description": "This is going to take forever",
  "permissions": ["declarativeContent", "storage", "tabs", "<all_urls>", "nativeMessaging"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["cscript.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon.png"
    }
  },
  "icons": {
    "128": "images/icon.png"
  },
  "manifest_version": 2
}
